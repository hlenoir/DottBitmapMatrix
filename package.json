    "build": "tsc -b",
    "clear": "rm -rf ./dist",
    "lint": "xo",
    "test": "jest"
  },
  "author": "Sébastien Laruée",
  "dependencies": {
    "joi": "17.3.0",
    "yargs": "16.1.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.15",
    "eslint-config-xo-typescript": "0.36.0",
    "jest": "26.6.3",
    "typescript": "4.1.2",
    "xo": "0.35.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "dist/.*/__tests__/.*\\.test\\.js$"
